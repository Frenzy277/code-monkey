%section.jumbotron.arrange_queue
  .container
    %h1 Arrangements Queue
.container
  .row
    %fieldset
      = form_tag update_queue_items_path, method: :patch do
        %table.table
          %thead
            %tr
              %th(width="5%") Order
              %th(width="20%") Language
              %th(width="18%") Sign up date
              %th(width="13%") Requester
              %th(width="12%") Type
              %th(width="13%") Status
              %th(width="12%") Decline
          %tbody
            - @queue_items.each do |queue_item|
              %tr
                = hidden_field_tag "queue_items[][id]", queue_item.id
                %td= text_field_tag "queue_items[][position]", queue_item.position, class: "form-control"
                %td= queue_item.skill.language.name
                %td= queue_item.created_at
                %td= link_to queue_item.mentee.full_name, user_path(queue_item.mentee)
                %td= queue_item.support
                %td= select_tag "queue_items[][status]", options_for_select(status_options, queue_item.status), class: "form-control"
                %td
                  = link_to queue_item, method: :delete do
                    %i.glyphicon.glyphicon-remove
        = submit_tag "Update Queue", class: "btn btn-default"