.modal.fade#feedbackFormModal(tabindex="-1" role="dialog" aria-labelledby="Feedback" aria-hidden="true")
  .modal-dialog
    .modal-content
      = form_for [@mentoring_session, @feedback], html: { class: "form-horizontal", role: "form" }, remote: true do |f|
        .modal-header
          %button.close(type="button" data-dismiss="modal")
            %span(aria-hidden="true") &times;
          %h4.modal-title#Feedback
            %span.glyphicon.glyphicon-bullhorn
            Feedback on Mentoring Session with #{@mentoring_session.mentor.full_name}
        .modal-body.clearfix
          .feedback_errors
            = render "shared/flash_messages"
          .col-sm-12.form-group
            = f.check_box :recommended, {checked: true}
            = f.label :recommended, "Recommend ?"
          .col-sm-12.form-group
            = f.label :content, "Feedback form:"
            = f.text_area :content, rows: 5, placeholder: "Your feedback goes here.", class: "form-control"
        .modal-footer
          %button(type="button" class="btn btn-default" data-dismiss="modal") Close
          = f.submit "Submit Feedback", class: "btn btn-primary"