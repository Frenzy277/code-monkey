          %li= link_to "Mentoring Sessions", mentoring_sessions_path
        %li= link_to "Account"
        %li
          = link_to sign_out_path do
            %i.glyphicon.glyphicon-log-out
            Sign out
      - else
        %li= link_to "Sign up", sign_up_path
        %li= link_to "Sign in", sign_in_path