%section.jumbotron.sign
  .container.col-sm-offset-4
    %h1 Sign Up
    %article.well.col-sm-5
      = form_for @user, html: { class: "form-horizontal", role: "form" } do |f|
        .form-group
          = f.label :first_name, "First name", class: "control-label col-sm-3"
          .col-sm-9
            = f.text_field :first_name, class: "form-control"
        .form-group
          = f.label :last_name, "Last name", class: "control-label col-sm-3"
          .col-sm-9
            = f.text_field :last_name, class: "form-control"
        .form-group
          = f.label :email, class: "control-label col-sm-3"
          .col-sm-9
            = f.email_field :email, class: "form-control"
        .form-group
          = f.label :password, class: "control-label col-sm-3"
          .col-sm-9
            = f.password_field :password, class: "form-control"
        .form-group
          .col-sm-9.col-sm-offset-3
            = f.submit "Create Account", class: "btn btn-danger form-control"