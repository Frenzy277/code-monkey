%nav.navbar.navbar-default.layout(role="navigation")
  .container
    .navbar-header
      %a.navbar-brand(href="")
        %span.bracket { dev: 
        %span= image_tag("search_monkey.png", alt: "search_monkey", size: "70x50")
        %span.bracket pledge }
    %ul.nav.navbar-nav.pull-right
      - if logged_in?
        %li= link_to "Credit: #{pluralize(current_user.balance, "hour")}"
        %li= link_to "Dashboard", dashboard_path
