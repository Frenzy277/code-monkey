%section.jumbotron.sign
  .container.col-sm-offset-4
    %h1 Sign Up
    %article.well.col-sm-5
      = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-8", role: "form" do |f|
        .form-group
          = f.text_field :first_name, label: "First name"
        .form-group
          = f.text_field :last_name, label: "Last name"
        .form-group
          = f.email_field :email
        .form-group
          = f.password_field :password, class: "form-control"
        .form-group
          = f.submit "Create Account", class: "btn btn-danger col-sm-8", style: "margin-left: 25%;"